model Purchase {
    // Common
    id Int @id @default(autoincrement())

    // Relationships
    itemId        Int         @unique
    item          Item        @relation(fields: [itemId], references: [id])
    transactionId Int         @unique
    transaction   Transaction @relation(fields: [transactionId], references: [id])
}

model Item {
    // Common
    id Int @id @default(autoincrement())

    // Properties
    name     String
    wikiSlug String

    // Relationships
    purchases      Purchase[]
    raidActivities RaidActivity[]
}
