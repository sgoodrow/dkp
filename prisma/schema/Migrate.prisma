enum MigrateAttemptStatus {
  IN_PROGRESS
  FAIL
  SUCCESS
}

model MigrateAttempt {
  // Common
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Properties
  status                    MigrateAttemptStatus
  error                     String?
  importedUsers             Boolean?             @default(false)
  importedCharacters        Boolean?             @default(false)
  importedRaidActivityTypes Boolean?             @default(false)
  importedRaidActivities    Boolean?             @default(false)
  syncedDiscordMetadata     Boolean?             @default(false)

  // Relationships
  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id])
}

model MigrateEqdkpUser {
  // Common
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Properties
  eqdkpUserId Int
  email       String? @unique
}
