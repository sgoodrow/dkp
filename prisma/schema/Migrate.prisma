enum MigrateAttemptStatus {
  FAIL
  COMPLETE
}

model MigrateAttempt {
  // Common
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Properties
  status                    MigrateAttemptStatus
  error                     String?
  importedUsers             Boolean?             @default(false)
  importedCharacters        Boolean?             @default(false)
  importedRaidActivityTypes Boolean?             @default(false)
  importedRaidActivities    Boolean?             @default(false)

  // Relationships
  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id])
}

model MigrateEqdkpUser {
  // Common
  id Int @id @default(autoincrement())

  // Properties
  name        String
  eqdkpUserId Int     @unique
  email       String? @unique
  currentDkp  Float
}
